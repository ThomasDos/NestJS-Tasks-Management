generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String        @id @default(uuid())
  title       String 
  description String 
  status      TaskStatus @default(OPEN)
  picture_url String 
  created_at DateTime @default(now())
  updated_at DateTime?

}

enum TaskStatus {
  OPEN 
  IN_PROGRESS
  DONE
}


model User {
  id String @id @default(uuid())
  username String @unique
  password String
  created_at DateTime @default(now())
  updated_at DateTime?
}